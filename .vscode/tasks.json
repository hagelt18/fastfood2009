{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/I${workspaceFolder}\\include", // <-- Add this line
                "/Fe${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
                "${file}",
                "/link /LIBPATH:${workspaceFolder}\\lib",
                "alleg.lib"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Copy Allegro DLL",
            "type": "shell",
            "command": "copy",
            "args": [
                "${workspaceFolder}\\lib\\alleg42.dll",
                "${workspaceFolder}\\build\\alleg42.dll"
            ],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}